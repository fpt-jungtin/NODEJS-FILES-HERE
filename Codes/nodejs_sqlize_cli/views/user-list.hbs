<a href="{{URL.USER_CREATE}}">Create</a>
<table>
    <tr>
        <td>ID</td>
        <td>Email</td>
        <td>Password</td>
        <td></td>
        <td></td>
    </tr>
    {{#each users as |user|}}
    <tr>
        <td>{{user.id}}</td>
        <td>{{user.email}}</td>
        <td>{{user.password}}</td>
        <td><a href="{{@root.URL.USER_UPDATE}}/{{user.id}}">UPDATE</a></td>
        <td>
            <form action="{{@root.URL.USER_DELETE}}/{{user.id}}"
                  method="post">
                <button type="submit">Delete</button>
            </form>
        </td>
    </tr>
    {{/each}}

</table>